

{{!-- section --}}
    <section class="section my-4">
        <div class="container text-center">
            <div class="title py-5">
                <h1>ການອັບໂຫຼດຮູບພາບ</h1>
                <p class="subtitle">ອັບໂຫລດຮູບພາບເຂົ້າ <strong>Server</strong></p>
            </div>

            <div class="row justify-content-center">
                <div class="col-4">
                    <form action="/uploadmultiple" enctype="multipart/form-data" method="POST">
                        <div class="row">
                            <div class="col-8">
                                <input type="file" class="form-control" name="images" id="formFile" multiple>
                            </div>
                            <div class="col-2">
                                <input type="submit" class="btn btn-warning" value="ອັບໂຫລດຮູບພາບ">
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            {{!-- display images --}}
                <section class="mt-5">
                    <div class="row">
                            {{#each images}} 
                                {{#each this}}
                                    {{#if imageBase64 }}
                                        {{!-- bootstrap cads --}}
                                            <div class="col-3">
                                                    <div class="card shadow" style="width: 18rem;">
                                                        <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top" class="img-fluid" alt="...">
                                                        <div class="card-body">
                                                            <h5 class="card-title font-poppins">ການອອກແບບ UI/UX</h5>
                                                            <p class="text-secondary font-size-09">ຄຳອະທິບາຍແລະລາຍລະອຽດຕ່າງໆຂອງຮູບພາບ.</p>
                                                            <a href="/" class="btn btn-info font-size-09 text-light">ອ່ານເພີ່ມຕື່ມ...</a>
                                                        </div>
                                                    </div>
                                            </div>
                                        {{!-- /bootstrap cads --}}
                                    {{/if}}
                                 {{/each}}
                            {{/each}}
                    </div>
                </section>
            {{!-- /display images --}}

        </div>
    </section>
{{!-- /section --}}
